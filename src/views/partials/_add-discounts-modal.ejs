<!-- add discount to course modal-->
<!-- ! add visible class to be visible ! -->
<div class="modal-container" id="add-discounts-modal">
  <div class="modal-content">
    <!-- ! Edit Course  ! -->
    <h1 class="modal-title">اعمال تخفیف همگانی</h1>
    <form action="/courses/discount" method="POST" class="edit-user-form">
      <div class="input-field">
        <span><i class="fa fa-tag"></i></span>
        <input
          type="number"
          name="discount"
          placeholder="میزان تخفیف (درصد)"
          min="0"
          max="100"
          required
        />
      </div>

      <button type="submit" class="add-discount-btn update-btn btn">
        اعمال تخفیف
      </button>
    </form>
  </div>
</div>
